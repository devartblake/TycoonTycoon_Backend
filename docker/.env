# =============================================================================
# Tycoon Backend - Docker Environment Configuration
# =============================================================================

# --- PostgreSQL ---
POSTGRES_DB=tycoon_db
POSTGRES_USER=tycoon_user
POSTGRES_PASSWORD=tycoon_password_123
POSTGRES_PORT=5432

# --- MongoDB Root ---
MONGO_INITDB_ROOT_USERNAME=tycoon_admin
MONGO_INITDB_ROOT_PASSWORD=tycoon_mongo_password_123
MONGO_INITDB_DATABASE=tycoon_db
MONGO_PORT=27017

# --- MongoDB App User (created by init script) ---
MONGO_APP_USER=tycoon_app_user
MONGO_APP_PASSWORD=tycoon_app_password_123
MONGO_APP_DB=tycoon_db

# --- Redis ---
REDIS_PASSWORD=tycoon_redis_password_123
REDIS_PORT=6379

# --- Elasticsearch / Kibana ---
ELASTIC_PASSWORD=tycoon_elastic_password_123
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601
ES_JAVA_OPTS=-Xms512m -Xmx512m

# --- Optional Admin UIs ---
PGADMIN_DEFAULT_EMAIL=admin@tycoon.local
PGADMIN_DEFAULT_PASSWORD=admin_password_123
PGADMIN_PORT=5050

MONGO_EXPRESS_PORT=8081
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin_password_123

# --- Backend API ---
ASPNETCORE_ENVIRONMENT=Development
BACKEND_HTTP_PORT=5000
BACKEND_HTTPS_PORT=5001

# --- Backend Configuration ---
# Hangfire
HANGFIRE_ENABLED=true

# Analytics
ANALYTICS_ENABLED=true

# Admin Operations
ADMIN_OPS_ENABLED=true
ADMIN_OPS_KEY=CHANGE_ME_IN_PRODUCTION

# JWT Authentication (⚠️ CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-me-in-production-minimum-32-characters-long

# --- Migration Service ---
# Mode: MigrateAndSeed | RebuildElastic | MigrateSeedAndRebuildElastic
MIGRATION_MODE=MigrateAndSeed

# Elasticsearch Rebuild (optional)
REBUILD_ELASTIC=false
REBUILD_ELASTIC_FROM_DATE=2025-01-01
REBUILD_ELASTIC_TO_DATE=2025-12-31
