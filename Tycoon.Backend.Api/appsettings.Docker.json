{
  "ConnectionStrings": {
    "db": "Host=localhost;Port=5432;Database=tycoon;Username=postgres;Password=postgres",
    "redis": "redis:6379,password=tycoon_redis_password_123,defaultDatabase=0",
    "mongo": "mongodb://tycoon_admin:tycoon_mongo_password_123@mongodb:27017/tycoon_db?authSource=tycoon_db",
    "elasticsearch": "http://elasticsearch:9200"
  },
  "Mongo": {
    "Database": "tycoon_analytics"
  },
  "Analytics": {
    "Enabled": true
  },
  "Hangfire": {
    "Enabled": true,
    "DashboardPath": "/hangfire",
    "WorkerCount": 10
  },
  //"Auth": {
